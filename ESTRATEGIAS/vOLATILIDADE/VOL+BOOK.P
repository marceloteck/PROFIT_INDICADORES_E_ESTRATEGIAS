INPUT
     LimiteSup(54);
     LimiteInf(46);
     Alvo(1.15);
     Stop(0.90);


VAR
     PBB, PBS, BB, BS, Vol, sAtr : Float;
     Filtro : Boolean;

BEGIN
     sAtr := StopATR(2, 20, 0)|0|;
     Vol := AvgTrueRange(10, 0);

     BB := TotalBuyQtd ;
     BS := TotalSellQtd ;

     PBB := Round(BB/(BB+BS)*100);
     PBS := Round(BS/(BB+BS)*100);

     Filtro :=  ((PBB >= LimiteInf) e (PBB <= LimiteSup)) e  ((PBS >= LimiteInf) e (PBS <= LimiteSup));




END;